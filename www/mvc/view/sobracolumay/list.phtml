                            </select>
                        </td>
                        <td template-field="reserved" style="width: 50px">
                            <button type="button" class="form-control btn btn-default btn-md" id="delete_block">
                              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                    <!-- /template-row -->
                </tbody>
            </table>
            
        </div>

    </div>
    <!-- /template-table -->
    
</div>

