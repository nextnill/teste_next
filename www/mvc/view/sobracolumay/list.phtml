<div>

    <div id="list">
    </div>

    <!-- template-table -->
    <div class="panel panel-default" style="display: none;" template-table>
        <div class="panel-heading" style="padding: 5px" >
            <h3 class="panel-title" style="font-weight: bold" template-title>Quarry</h3>
            <div><span class="label label-primary" template-quality>Quality</span></div>
            <div class="text-right">
                <button type="button" class="btn btn-primary btn_reserve" id="btn_reserve" onclick="javascript: abrir_modal_reserve();">
